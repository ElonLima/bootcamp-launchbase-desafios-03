{% block content %}
    
    <section class="cards">
        {% for item in items %}
            <div class="card" id="{{item.id}}">
                
                <div class="card__image-container">
                    <img src="{{item.logo}}" alt="{{item.id}}">
                </div>

                <div class="card__content">
                    <p>{{item.level}}</p>
                </div>

                <div class="card__info">
                    <p>{{item.classes}}</p>
                    <p class="card__price">{{item.price}}</p>
                </div>
            </div>
        {% endfor %}    
    </section>

     <section class="redirect active">
        <iframe src="https://rocketseat.com.br/{{item.id}}" frameborder="0"></iframe>
    </section> 

    <script src="scripts.js"></script>

{% endblock %}
 #}